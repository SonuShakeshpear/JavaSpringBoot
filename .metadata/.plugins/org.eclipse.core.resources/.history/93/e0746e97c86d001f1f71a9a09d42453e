package com.digital_library_system.project.library_manage_sys.createRequests;

import java.sql.Date;
import java.util.List;

import com.digital_library_system.project.library_manage_sys.models.Author;
import com.digital_library_system.project.library_manage_sys.models.Book;
import com.digital_library_system.project.library_manage_sys.models.Genre;

import jakarta.validation.constraints.Email;
import jakarta.validation.constraints.NotBlank;
import lombok.AllArgsConstructor;
import lombok.Builder;
import lombok.Getter;
import lombok.NoArgsConstructor;
import lombok.Setter;

@Getter
@Setter
@AllArgsConstructor
@NoArgsConstructor
@Builder
public class BookCreateRequest {
	
	@NotBlank
	private String name;
	
	@NotBlank
	private Genre bookGenre;
	
	@NotBlank
	private String bookAuthor;
	
	@Email
	private String email;
	
	public  Book to() {
		Author author = Author.builder().email(email).authorName(bookAuthor).build();
		
		return Book.builder().name(name).bookGenre(bookGenre).bookAuthor(author).build();
	}

}
